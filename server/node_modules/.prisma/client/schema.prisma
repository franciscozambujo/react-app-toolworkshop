// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  user     String @unique
  password String
  nome     String
  email    String @unique
  cargo    String @default("client")

  // Relacionamentos
  vehicles  Vehicle[]
  carChecks CarCheck[]

  @@map("utilizadores")
}

model Vehicle {
  id        Int    @id @default(autoincrement())
  marca     String
  modelo    String
  matricula String @unique
  clientId  Int    @map("cliente")

  // Relacionamentos
  client  User     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  repairs Repair[]

  @@map("veiculos")
}

model Repair {
  id        Int      @id @default(autoincrement()) @map("ID")
  vehicleId Int      @map("veiculo")
  descricao String
  valor     Decimal  @db.Decimal(10, 2)
  data      DateTime @db.Date

  // Relacionamentos
  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("reparacoes")
}

model Review {
  id        Int    @id @default(autoincrement())
  nome      String
  email     String
  descricao String @db.Text
  estrelas  Int

  @@map("avaliacoes")
}

model CarCheck {
  id            Int      @id @default(autoincrement())
  clientId      Int      @map("cliente")
  carro         String
  matricula     String
  data_agendada DateTime @db.Date
  estado        String   @default("Por aprovar")

  // Relacionamentos
  client User @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("revisoes")
}
